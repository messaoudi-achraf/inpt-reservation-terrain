<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".GererEtudiant">



    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/blueshap"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Gestion des Ã©tudiants"
            android:textColor="@color/white"
            android:textSize="35dp" />


    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/addbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"


        />




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rmvbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rmvall"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="70dp"

            />









    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame"

        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"

        android:padding="7dp"

        android:background="@drawable/bluerounded"

        android:hint="rechercher un etudiant" />





    <ListView
        android:id="@+id/listview"
        android:layout_below="@id/search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item"
            >

        </ListView>





</RelativeLayout>